@using PagedList.Mvc;
@model PagedList.IPagedList<OnlineStoreEntity.Product>

@{
    ViewBag.Title = "Product";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div id="myModal" class="modal fade in">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<h2>Products</h2>
<div class="navbar-form" style="padding-left: 0px">
    <div class="btn-group">
        @Html.ActionLink("Add a new product", "CreateProduct", "Admin", null, new { data_modal = "", id = "btnCreate", @class = "btn btn-primary" })
    </div>
    <div class="input-group">
        @using (Html.BeginForm("Product", "Admin", new { @class = "navbar-form navbar-left", role = "search" }))
        {
            <div class="form-group">
                @Html.TextBox("searchString", "", new { @class = "form-control", placeholder = "Search for..." })
            </div>
            <input class="btn btn-primary" type="submit" value="Search" />
        }
    </div>
</div>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Category</th>
        <th class="NumericCol">Price</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@Html.ActionLink(item.Name, "EditProduct", new { item.Id })</td>
            <td>@item.Category.Name</td>
            <td class="NumericCol">@item.Price.ToString("c")</td>
            <td>
                @using (Html.BeginForm("DeleteProduct", "Admin"))
                {
                    @Html.Hidden("Id", item.Id)
                    <input class="btn btn-sm btn-danger" type="submit" value="Delete" />
                }
            </td>
        </tr>
    }
</table>
@Html.PagedListPager(Model, page => Url.Action("Product", new { page }))

@section Scripts{
    @Scripts.Render("~/bundles/modalform")
}